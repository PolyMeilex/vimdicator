<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="Adw" version="1.0" />
  <requires lib="Panel" version="1.0" />

  <template class="VimdicatorWindow" parent="AdwApplicationWindow">
    <property name="content">
      <object class="GtkBox">
        <property name="orientation">vertical</property>

        <child>
          <object class="AdwHeaderBar" id="headerbar">
            <property name="focusable">false</property>
            
            <child type="start">
              <object class="PanelToggleButton">
                <property name="dock">dock</property>
                <property name="area">start</property>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="PanelDock" id="dock">
            <property name="reveal-start">true</property>
            <property name="start-width">200</property>
            <property name="vexpand">true</property>

            <child>
              <object class="PanelPaned" id="main_panel">
              </object>
            </child>

            <child type="start">
              <object class="PanelPaned" id="start_panel">
              </object>
            </child>

          </object>
        </child>

      </object>

    </property>
  </template>
</interface>